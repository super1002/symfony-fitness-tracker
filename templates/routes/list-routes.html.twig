{% extends 'base.html.twig' %}

{% block title %}Your Routes{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-sm-10">
            <h1>Your Routes</h1>
        </div>
        <div class="col-sm-2">
            <a class="btn btn-info" href="{{ path('routes_add') }}">Add Route</a>
        </div>
    </div>


    <table class="table table-hover table-striped">
        <thead>
        <tr>
            <th>id</th>
            <th>Name</th>
            <th>Date Created</th>
            <th>Link</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for route in joggingRoutes %}
            <tr>
                <td>{{ route.id }}</td>
                <td>{{ route.name }}</td>
                <td>{{ route.dateCreated|date('Y.m.d') }}</td>
                <td><a href="{{ route.link }}" target="_blank">Map</a></td>
                <td>
                    <details>
                        <summary class="btn">Action</summary>
                        <ul>
                            <li><a href="{{ path('routes_edit', {'route': route.id}) }}" class="btn btn-light">Edit</a></li>
                        </ul>
                    </details>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}